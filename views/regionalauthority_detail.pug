extends layout

block content

  h1 Region: #{regionalauthority.region_name} : #{regionalauthority.region_code}

  P  Country: #{regionalauthority.country}

  p  Allow Status: #{regionalauthority.allowed}

  p  Harmonized:  #{regionalauthority.harmonized}

  p  Federal Rate: #{regionalauthority.fed_rate}

  p  Fed. Rate Active: #{regionalauthority.fed_rate_active}

  p  Regional Rate: #{regionalauthority.reg_rate}

  p  Restriction Code: #{regionalauthority.restriction_code}

  P  Transaction Limit: #{regionalauthority.transaction_limit}

  P  Current Transaction Count: #{regionalauthority.current_count}

  P  Amount Limit: #{regionalauthority.amount_limit}

  P  Current Amount: #{regionalauthority.current_amount}

  P  Period Type: #{regionalauthority.transaction_period_type}

  P  Limit Date: #{regionalauthority.current_transaction_period}

  P  # of Attempts: #{regionalauthority.attempted}

  hr
  p
    a(href=regionalauthority.url+'/delete') Delete Regional Tax Authority

  p
    a(href=regionalauthority.url+'/update') Update Regional Tax Authority

  p
    a(href='/catalog//countrytaxauthorities') List Country Authorities

  P
    a(href='/catalog/regionalauthorities') List Regional Authorities

  p
    a(href='/catalog/clients') List Clients
