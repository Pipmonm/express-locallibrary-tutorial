extends layout

block content
  h1=title

  p Client: #{client}

  form(method='POST' action='')
    div.form-group
      label(for='appname') Aplication Name
      select#clientrequest.form-control(type='select' placeholder="appname:" name='appname' required='true')
        option(value='PieSlicer') Pie PieSlicer
        option(value='FracSpeller') Fraction Speller

    div.form-group
      label(for='status') Status:
      select#status.form-control(type='select' placeholder='Select status' name='status' required='true')
        option(value='pendingPay') Pending
        option(value='processed') Processed
        option(value='canceled') Canceled
        option(value='invalid') Not Valid

    button.btn.btn-primary(type='submit') Submit

  if errors
    ul
      for error in errors
        li!= error.msg
