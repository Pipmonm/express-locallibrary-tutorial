extends layout

block content
  h1=title

  form(method='POST' action='')
    div.form-group
      label(for='clientrequest') #{clientrequest.client}
      select#clientrequest.form-control(type='select' placeholder="module:" name='clientrequest_module' required='true')
      for clientrequest in clientrequest_list
          option(value=clientrequest._id) #{clientrequest.client}

    div.form-group
      label(for='status') Status:
      select#status.form-control(type='select' placeholder='Select status' name='status' required='true')
        option(value='pendingPay') Pending
        option(value='processed') Processed
        option(value='canceled') Canceled
        option(value='invalid') Not Valid

    button.btn.btn-primary(type='submit') Submit

  if errors
    ul
      for error in errors
        li!= error.msg
