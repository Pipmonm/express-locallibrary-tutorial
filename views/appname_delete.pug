extends layout

block content
  h1 #{title}: #{appname.name}

  if appname_clientrequests.length

    p #[strong Delete or modify the following clientrequests before attempting to delete this appname.]

    div(style='margin-left:20px;margin-top:20px')

      h4 ClientRequests

      dl
      each clientrequest in appname_clientrequests
        dt
          a(href=clientrequest.url) #{clientrequest.date_entered}
        dd #{clientrequest.status}

  else
    p Do you really want to delete this Appname?

    form(method='POST' action='')
      div.form-group
        input#appnameid.form-control(type='hidden',name='appnameid', required='true', value=appname._id )

      button.btn.btn-primary(type='submit') Delete
