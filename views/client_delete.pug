extends layout

block content
  h1 #{title}: #{client.name}
  p= client.email_address

  if client_requests //- was .length here

    p #[strong Delete the following requests before attempting to delete this client.]

    div(style='margin-left:20px;margin-top:20px')

    h4 Client Requests

    dl
    each clientrequest in clientrequests
      dt
        a(href=clientrequest.url) #{clientrequest.date_entered}
      dd #{clientrequest.appname}


  else
    p Do you really want to delete this Client?

    form(method='POST' action='')
      div.form-group
        input#clientid.form-control(type='hidden',name='clientid', required='true', value=client._id )

      button.btn.btn-primary(type='submit') Delete
