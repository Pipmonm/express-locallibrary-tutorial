    a(href=countrytaxauthority.url+'/delete') Delete Country Tax Authority

  p
    a(href=countrytaxauthority.url+'/update') Update Country Tax Authority

  p
    a(href='/catalog//countrytaxauthorities') List Country Authorities

  P
    a(href='/catalog/regionalauthorities') List Regional Authorities

  p
    a(href='/catalog/clients') List Clients
