extends layout

block content
  h1 #{title}

  form(method='POST' action='')
    div.form-group
      label(for='name') Appname:
      input#name.form-control(type='text', placeholder='PieSlicer, FracSpeller' name='name' value=(undefined===appname ? '' : appname.name), required = 'true')
    button.btn.btn-primary(type='submit') Submit

  if errors
    ul
      for error in errors
        li!= error.msg
