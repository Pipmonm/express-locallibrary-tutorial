extends layout

block content
  h1 #{title}

  form(method='POST' action='')
    div.form-group
      label(for='name') Status:
      input#name.form-control(type='text', placeholder='pendingPay, processed, etc.. ' name='name' value=(undefined===status ? '' : status.name), required = 'true')
    button.btn.btn-primary(type='submit') Submit

  if errors
    ul
      for error in errors
        li!= error.msg
